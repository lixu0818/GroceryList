<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.AddGrocerySetActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_grocery_set"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/appNameBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:id="@+id/add_grocery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="15"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:id="@+id/groceryName"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_below="@+id/add_grocery_text"
            android:layout_alignParentStart="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_grocery_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/addNewGroceryButton"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/groceryName"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All Groceries"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/addGroceryViewGroceryListButton"
            android:layout_alignParentStart="true" />
    </LinearLayout>
</LinearLayout>