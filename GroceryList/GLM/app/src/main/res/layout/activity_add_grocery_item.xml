<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.AddGrocerySetActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_grocery_item"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/appNameBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:id="@+id/add_item_name_content"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom">
        <TextView
            android:id="@+id/add_item_name_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Item:      "
            android:layout_gravity="bottom"
            android:layout_weight="1"/>

        <AutoCompleteTextView
            android:id="@+id/add_item_name_text"
            android:layout_width="210dp"
            android:ems="10"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_item_type_content"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/add_item_type_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Type:      "
            android:layout_weight="1" />
        <AutoCompleteTextView
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:id="@+id/add_item_type_text"
            android:ems="10"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_item_quantity_content"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/add_item_quantity_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Quantity: "
            android:layout_weight="1" />
        <EditText
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_item_quantity_text"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:layout_gravity="bottom"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_item_quantity_type_content"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/add_item_quantity_type_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Unit:       "
            android:layout_weight="1" />
        <AutoCompleteTextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_item_quantity_type_text"
            android:ems="5"
            android:layout_gravity="bottom"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/add_grocery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Item"
            android:textAllCaps="false"
            android:id="@+id/add_item"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/view_grocery_Items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Grocery Items"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:layout_weight="1"
            android:id="@+id/viewGroceryItemsButton"
            android:layout_alignParentStart="true" />
    </LinearLayout>
</LinearLayout>
